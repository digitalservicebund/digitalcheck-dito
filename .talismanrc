fileignoreconfig:
- filename: .env.example
  ignore_detectors: [filename]
- filename: .env.test
  ignore_detectors: [filename]
- filename: app/root.tsx
  allowed_patterns: [posthogKey]
- filename: .github/workflows/pipeline.yml
  allowed_patterns:
    - "@[a-z0-9]{40}"
- filename: .github/workflows/scan.yml
  ignore_detectors: [filecontent]
- filename: app/utils/localStorage.ts
  allowed_patterns:
    - storageKey
- filename: app/utils/localStorage.spec.ts
  allowed_patterns:
    - testKey
- filename: app/routes/dokumentation/documentationDataService.ts
  allowed_patterns:
    - STORAGE_KEY
allowed_patterns:
  - key
  - onKey
  - handleKey
  - passen
  - Anpassungen
  - Pass\s # Allow "Pass " followed by a space
  - digitalservicebund/[^@]+@[a-z0-9]{40} # Allow any digitalservicebund action with a 40 character hash

scopeconfig:
  - scope: node  # ignores files such as package-lock.json